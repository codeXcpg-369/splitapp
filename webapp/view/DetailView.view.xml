 <mvc:View controllerName="app.splitapp.controller.DetailView"
    xmlns:mvc="sap.ui.core.mvc" xmlns:f="sap.ui.layout.form"
    xmlns="sap.m">
	<Page id="idDetail1" title="Detail View" showNavButton="true" navButtonPress="onListView">
		<content>
			<f:SimpleForm editable="true">
				<Label text="Tool Name" class="bold-class" design="Bold"></Label>
				<Text text="{toolsModel>toolsName}"></Text>
				<Label text="Uses"></Label>
				<Text text="{toolsModel>uses}"></Text>
				<Image src="{toolsModel>image}" width="300px" height="300px"></Image>
				<Label text="Weight"></Label>
				<Text text="{toolsModel>weight}"></Text>
				<Label text="Warranty"></Label>
				<Text text="{toolsModel>warranty}"></Text>
			</f:SimpleForm>
		</content>
	</Page>
</mvc:View> 